<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >

        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="android:paddingBottom">@dimen/spacing_standard</item>
        <item name="android:paddingStart">@dimen/spacing_standard</item>
        <item name="android:paddingEnd">@dimen/spacing_standard</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="cornerRadius">@dimen/spacing_xlarge</item>

    </style>
    <style name="MaterialButtonStyle.Filled">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/commonColorWhite</item>
        <item name="rippleColor">@color/white</item>

    </style>
    <style name="EditTextStyle">
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:background">@drawable/bg_ractangle_rounded_inactive</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="MaterialButtonStyle.Stroked">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
